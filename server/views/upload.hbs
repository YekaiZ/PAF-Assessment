<h2>Song Upload</h2>
<form action="/upload" method="post" enctype="multipart/form-data">
    Title: <br>
    <input type="text" name="title" placeholder="Song name" required><br>
    Country: <br>
    <select name="country" required>
        {{#each result}}
        <option value={{this.code}}>{{this.name}}</option>
        {{/each}}
    </select><br>
    Listening slots: <br>
    <input type="number" name="slots" placeholder="3"><br>
    Lyrics: <br>
    <textarea name="lyrics" cols="30" rows="10"></textarea><br>

    MP3 File: <br>
    <input type="file" name="mp3file" accept="audio/*" required><br>
    <button type="submit">Upload</button>
</form>